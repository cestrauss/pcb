/* Standard headers */
#include <string>


/* Fltk headers */
#include <FL/Fl.H>
#include <FL/Fl_Button.H>
#include <FL/Fl_Box.H>
#include <FL/fl_message.H>
#include <FL/Fl_Window.H>


#include "about_dialog.h"
#include "default_button.h"


About_Dialog::About_Dialog () : public Fl_Window
{
  public:
    About_Dialog::About_Dialog () : Fl_Window (0, 0, 640, 480, "About ...")
    {
      end ();
      button_show_message.callback ([] (Fl_Widget *sender, void *data)
                                    {
                                      about (/* Dialog name. */
                                             "FLTK HID v0.0.1 for:\n",
                                             /* Dialog title. */
                                             "About PCB",
                                             /* Description. */
                                             "This is PCB, an interactive printed circuit board editor.\n" \
                                             "It is licensed under the terms of the GNU General Public License version 2.\n" \
                                             "See the LICENSE file for more information.\n" \
                                             "The FLTK HID requires FLTK version 1.3.4.",
                                             /* PCB version. */
                                             "pcb-4.5.0",
                                             /* Copyright notice. */
                                             "Copyright Â© 2022 pcb contributors.\n" \
                                             "All rights reserved.\n");
                                    },
                                    this);
    }

    About_Dialog::~About_Dialog ()
    {
    }

    void
    show (void)
    {
    }


  private:
    static void
    about (const std::string &name,
           const std::string &title,
           const std::string &description,
           const std::string &version,
           const std::string &copyright)
    {
      fl_message_icon ()->label ("i");
      fl_message_title (title.c_str ());
      fl_choice ("%s",
                 nullptr,
                 fl_ok,
                 nullptr,
                 (name + "\n" + version + "\n\n" + copyright + "\n" + description + "\n").c_str ());
    }

};
